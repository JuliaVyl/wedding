---
export interface Props {
	names: string;
}

const { names } = Astro.props as Props;
---

<div class='wrapper'>
	<span class='date'>01.10.2022</span>
	<span class='save'>save the date</span>
	<h1 class='names'>{names}</h1>
	<div>
		<span class='adress'>Terrace Restaurant</span>
		<span class='time'> | 14:00</span>
	</div>
</div>

<style>
  .wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .date {
    font-weight: 700;
    margin-bottom: 42px;
  }

  .save {
    text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    margin-bottom: 42px;
  }

  .names {
    text-transform: capitalize;
    margin-bottom: 42px;
    font-size: 72px;
    line-height: 203px;

